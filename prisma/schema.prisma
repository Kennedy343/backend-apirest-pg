generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product{
  id          Int      @id @default(autoincrement())
  nombre     String    @db.VarChar(100)
  descripcion String   @db.VarChar(255)
  precio     Decimal     @db.Decimal(10, 2)
  stock      Int       @default(0)
  sku        String    @unique
}
